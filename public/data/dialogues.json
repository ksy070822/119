    "S5_BIZ_LEAD": {
      "id": "S5_BIZ_LEAD",
      "steps": [
        { "type": "dialogue", "speaker": "비즈니스리더", "text": "VOC 취합과 보상안 검토 방향 정리해두었습니다." },
