        {
          "type": "response",
          "conditions": {
            "S2_C4": { "speaker": "채널담당", "text": "T앱/내비·SNS로 공지하겠습니다.", "followUp": null },
            "S2_C5": { "speaker": "채널담당", "text": "복구 상황만 모니터링하겠습니다.", "followUp": null }
          }
        }
      ]
    },
    "S2_REPORTER": {
      "id": "S2_REPORTER",
      "steps": [
        { "type": "dialogue", "speaker": "리포터", "text": "현재는 법적 의무 공지 시간 이전입니다. 아직 선택의 여지는 남아 있습니다." },
        { "type": "item_reward", "itemId": "timeline", "text": "타임라인을 획득했습니다." }
