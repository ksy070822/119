    "S4_TECH_LEAD": {
      "id": "S4_TECH_LEAD",
      "steps": [
        { "type": "dialogue", "speaker": "테크리더", "text": "내부 시스템은 정상화되었습니다. 현재 이슈는 외부 연동 구간입니다." },
        { "type": "item_reward", "itemId": "tablet", "text": "복구 태블릿을 획득했습니다." }
      ]
    },
    "S5_MAIN": {
      "id": "S5_MAIN",
      "steps": [
        { "type": "dialogue", "speaker": "후속담당", "text": "장애가 종료되었습니다. 다음으로 할 일은?" },
        {
          "type": "choice",
          "choices": [
            { "id": "S5_C1", "text": "VOC 취합, 피해 규모 파악, 보상안 검토", "preview": "유지", "checkpoint": false, "effects": { "internalChaos": 0, "externalRisk": 0 } },
            { "id": "S5_C2", "text": "테크리더에게 재발방지·장애 리포트 요청", "preview": "유지", "checkpoint": false, "effects": { "internalChaos": 0, "externalRisk": 0 } },
            { "id": "S5_C3", "text": "아무 것도 남기지 않는다", "preview": "조직 혼란 상승", "checkpoint": false, "effects": { "internalChaos": 10, "externalRisk": 0 } }
