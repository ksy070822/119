        {
          "type": "response",
          "conditions": {
            "S4_C1": { "speaker": "복구담당", "text": "등급 검토 후 합의하겠습니다.", "followUp": null },
            "S4_C2": { "speaker": "복구담당", "text": "즉시 복구 공지하겠습니다.", "followUp": null }
