        {
          "type": "response",
          "conditions": {
            "S5_C1": { "speaker": "후속담당", "text": "VOC·보상안 진행하겠습니다.", "followUp": null },
            "S5_C2": { "speaker": "후속담당", "text": "장애 리포트 요청하겠습니다.", "followUp": null },
            "S5_C3": { "speaker": "후속담당", "text": "알겠습니다.", "followUp": null }
          }
        }
      ]
