    },
    "S4_MAIN": {
      "id": "S4_MAIN",
      "steps": [
        { "type": "dialogue", "speaker": "복구담당", "text": "테크에서 \"일부 정상화\" 전달. 복구 공지할까요?" },
        {
          "type": "choice",
          "choices": [
            { "id": "S4_C1", "text": "등급 하향 검토 후 복구 선언 합의하고 공지", "preview": "유지", "checkpoint": false, "effects": { "internalChaos": 0, "externalRisk": 0 } },
            { "id": "S4_C2", "text": "바로 복구 공지 게시", "preview": "조직·대외 소폭 상승", "checkpoint": true, "effects": { "internalChaos": 5, "externalRisk": 10 } }
          ]
